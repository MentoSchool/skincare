<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:gravity="center"
    android:background="#dae7f7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:gravity="center">

        <Button
            android:id="@+id/testbackbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/splash_back_btn" />

        <TextView
            android:id="@+id/txttest1"
            android:layout_width="200dp"
            android:layout_height="72dp"
            android:gravity="center"
            android:text="1.세안 후 피부가 전혀 당기지 않는다."
            android:textSize="20sp" />

    </LinearLayout>
    
	<TextView android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="  "/>
    
    <RadioGroup android:id="@+id/RadioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/yes_radiobtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/test_radiobutton2"
            android:text="Yes" />

         <RadioButton
             android:id="@+id/no_radiobtn"
             android:layout_width="162dp"
             android:layout_height="wrap_content"
             android:button="@drawable/test_radiobutton"
             android:text="No" />

    </RadioGroup>


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/drawer_profile_skin1"
        android:layout_width="@dimen/drawer_width_1"
        android:layout_height="@dimen/profile_height_1"
        android:background="#dae7f7" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/drawer_profile_skin1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:text="sedong" />

    <ImageView
        android:id="@+id/profile_image12"
        android:layout_width="@dimen/profile_avatar_width_1"
        android:layout_height="@dimen/profile_avatar_height_1"
        android:layout_above="@id/textView1"
        android:layout_centerHorizontal="true"
        android:background="@android:color/white"
        android:padding="@dimen/profile_avatar_padding"
        android:src="@android:color/holo_blue_dark" />

    <ListView
        android:id="@android:id/list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/commit_Button"
        android:layout_below="@+id/drawer_profile_skin1" >
    </ListView>

    <Button
        android:id="@+id/commit_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="저장하기" />

</RelativeLayout>
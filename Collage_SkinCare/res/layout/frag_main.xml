<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ProgressBar
        android:id="@+id/frag_main_progress"
        style="@android:style/Widget.DeviceDefault.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-8dp" />

    <TextView
        android:id="@+id/frag_main_lat_lng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/latlng"
        android:textIsSelectable="true" />

    <TextView
        android:id="@+id/frag_main_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/address"
        android:textIsSelectable="true" />

    <TextView
        android:id="@+id/frag_main_connection_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="connection state"
        android:text="@string/unknown"
        android:textIsSelectable="true" />

    <TextView
        android:id="@+id/frag_main_connection_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="connection state"
        android:text="@string/unknown"
        android:textIsSelectable="true" />

    <Button
        android:id="@+id/frag_main_btn_current"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="현재위치의 자외선 지수" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/frag_main_et_area_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:hint="지점코드 입력"
            android:inputType="number"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:id="@+id/frag_main_btn_area"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="지점의 자외선 지수" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/frag_main_console"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@android:color/background_dark"
            android:padding="5dp"
            android:textColor="@android:color/white" />
    </ScrollView>

</LinearLayout>
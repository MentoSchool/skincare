<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/com_rounded_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="0.5" >

        <TextView
            android:id="@+id/today_date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="2.5"
        android:background="@drawable/com_rounded_action_bar"
        android:orientation="vertical" >

        <com.collage.goddessofskin.prototype.utils.custom.CustemGallery
            android:id="@+id/gallery"
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="4" >
        </com.collage.goddessofskin.prototype.utils.custom.CustemGallery>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@drawable/com_rounded_action_bar"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_cur_Weather"
            android:layout_width="0px"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/com_rounded_background"
            android:gravity="center"
            android:text="@string/menu_weather_today"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_select_Weather"
            android:layout_width="0px"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/com_rounded_background"
            android:gravity="center"
            android:text="@string/menu_weather_today"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_local"
            android:layout_width="0px"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/com_rounded_background"
            android:gravity="center"
            android:text="@string/menu_weather_today"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@drawable/com_rounded_action_bar"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_temperature_cur"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/com_rounded_background"
            android:gravity="center"
            android:text="@string/menu_weather_today"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_temperature_hi"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/com_rounded_background"
            android:gravity="center"
            android:text="@string/menu_weather_today"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_temperature_low"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/com_rounded_background"
            android:gravity="center"
            android:text="@string/menu_weather_today"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="3.5"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/Ult_Detail"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="2.5" />

        <Button
            android:id="@+id/Schedule_butten"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:padding="10dp" />
    </LinearLayout>

</LinearLayout>